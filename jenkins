pipeline {
    agent any

    tools {
        nodejs 'NodeJS' // Ensure NodeJS is installed and configured in Jenkins
    }

    environment {
        SONARQUBE_URL = 'http://localhost:9000'  // Update with your SonarQube URL if needed
        SONARQUBE_TOKEN = credentials('sonar-token')  // SonarQube token from Jenkins credentials
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out the code from GitHub...'
                git branch: 'main', url: 'https://github.com/rishi-patil/Todo.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                echo 'Installing dependencies...'
                bat 'npm install'
            }
        }

        stage('Run Tests') {
            steps {
                echo 'Running unit tests...'
                bat 'npm test'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                echo 'Running SonarQube analysis...'
                withSonarQubeEnv('sonarqube') {  // 'sonarqube' should match the name in Jenkins SonarQube configuration
                    bat 'npm run sonar' // Ensure 'sonar' script is defined in package.json
                }
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying application...'
                // Add deployment steps here if necessary
            }
        }

        stage('Quality Gate') {
            steps {
                echo 'Checking SonarQube Quality Gate...'
                waitForQualityGate abortPipeline: true
            }
        }
    }

    post {
        always {
            echo 'Pipeline completed.'
        }
        success {
            echo 'Pipeline succeeded!'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
